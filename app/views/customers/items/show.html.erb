<h1><%= @item.item_name %></h1>
<h2><%= @item.caption %></h2>
<p>💲<%= @total_price %>（税込）</p>
<%= form_with model: @item_cart,url: customers_cart_items_path,local: true do |f| %>
<%= f.select :quantity,options_for_select(1..10), prompt: "選択してください" %>
<%= f.hidden_field :customer_id, value: current_customer.id %>
<%= f.hidden_field :item_id, value: @item.id %>
<%= f.submit "カートに入れる" %>
<% end %>
